<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profilename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:onClick="didTapButton"
                    android:text="Anshuman Sekahar Dash" />

                <TextView
                    android:id="@+id/collegename"
                    android:layout_width="wrap_content"
                    android:onClick="didTapButton"
                    android:layout_height="wrap_content"
                    android:text="IGIT Sarang" />


            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/photo"
            android:onClick="didTapButton"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/descp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="EDM Night Organized By IGIT Sarang on the eve of Utkal diwas" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:id="@+id/numlikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
                android:gravity="center"
                android:onClick="didTapButton"
                android:text="12" />

            <TextView
                android:id="@+id/numdislikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_thumb_down_black_24dp"
                android:gravity="center"
                android:onClick="didTapButton"
                android:text="3" />

            <TextView
                android:id="@+id/attending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="didTapButton"
                android:drawableLeft="@drawable/ic_face_black_24dp"
                android:gravity="center"
                android:text="56" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>